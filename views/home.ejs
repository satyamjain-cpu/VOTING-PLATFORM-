<html>
  <head>
    <title>Voting Platform | Satyam jain</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gradient-to-tl from-red-200 to-red-500 min-h-screen w-full"
  >
    <div class="flex justify-center text-blue-800">
      <%- include ('header') %>
    </div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-2/5 w-full">
        
      
        <div class="flex flex-col justify-center items-center">
          <p class="text-black-600 text-2xl font-bold pt-4"><u>Admin Login</u></p>
          <div
            class="flex flex-col justify-center items-center md:w-2/5 w-full"
          >
            <div
              class="flex flex-col justify-center pt-4 items-center pt-8 w-full"
            >
              <b>Existing User?</b>
              <a
                class="bg-yellow-500 border-2 border-blue-800 flex justify-center hover:bg-blue-700 text-white font-bold p-1 rounded-lg w-full"
                href="/login"
                >Log In</a
              >
            </div>
            <div class="flex flex-col justify-center pt-4 items-center w-full">
              <b>New User?</b>
              <a
                class="bg-yellow-500 border-2 w-full flex justify-center border-blue-800 hover:bg-blue-700 text-white font-bold p-1 rounded-lg"
                href="/signup"
                >Sign Up</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
